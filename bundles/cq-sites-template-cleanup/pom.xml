        <dependency>
            <groupId>com.day.cq.wcm</groupId>
            <artifactId>cq-wcm-api</artifactId>
            <version>5.11.26</version>
            <scope>provided</scope>
        </dependency>
        <!-- *************************************************************** -->
        <!-- Other -->
